{
  "$schema" : "http://json-schema.org/draft-07/schema#",
  "definitions" : {
    "types" : {
      "string_number_boolean" : {
        "oneOf" : [
          {
            "type" : "string"
          },
          {
            "type" : "number"
          },
          {
            "type" : "boolean"
          }
        ]
      }
    },
    "action" : {
      "type" : "string",
      "enum" : [
        "get",
        "set"
      ]
    }
  },
  "type" : "object",
  "properties" : {
    "action" : {
      "$ref" : "#/definitions/action"
    },
    "device" : {
      "type" : "string",
      "description" : "Device unique uuid v4 identifier"
    },
    "property" : {
      "type" : "string",
      "description" : "Device property unique uuid v4 identifier"
    }
  },
  "if" : {
    "properties" : {
      "action" : {
        "const" : "get"
      }
    }
  },
  "then" : {
    "required" : [
      "action",
      "device",
      "property"
    ]
  },
  "else" : {
    "if" : {
      "properties" : {
        "action" : {
          "const" : "set"
        }
      }
    },
    "then" : {
      "properties" : {
        "expected_value" : {
          "$ref" : "#/definitions/types/string_number_boolean",
          "description" : "Property value to be written into property"
        }
      },
      "required" : [
        "action",
        "device",
        "property",
        "expected_value"
      ]
    }
  }
}
